{
  "name": "flutter-genius",
  "displayName": "FlutterGenius",
  "description": "FlutterGenius: Streamline your Flutter development with automated folder structures, feature generation, and JSON to Dart class conversion.",
  "publisher": "alexxy",
  "author": {
    "name": "Aayush Pandey",
    "url": "https://github.com/alexxyqq",
    "email": "aayushpandey616+flutterGenius@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AlexxyQQ/flutter-genius"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.87.0"
  },
  "icon": "assets/temp-icon.png",
  "categories": [
    "Snippets",
    "Programming Languages"
  ],
  "keywords": [
    "dart",
    "flutter",
    "dart class",
    "flutter class",
    "feature-driven",
    "feature-driven architecture",
    "feature-driven development",
    "feature-driven design",
    "feature folder structure generator",
    "bloc",
    "state-management"
  ],
  "activationEvents": [
    "onLanguage:plaintext"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "flutter-genius.addFeature",
        "title": "Add Feature"
      },
      {
        "command": "flutter-genius.createCleanCodeFolderStructure",
        "title": "Create Clean Code Folder Structure"
      },
      {
        "command": "flutter-genius.convertJsonToDart",
        "title": "Convert JSON to Dart"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "flutter-genius.addFeature",
          "group": "navigation@10",
          "when": "explorerResourceIsFolder == true"
        }
      ]
    },
    "configuration": {
      "title": "Dart Entity Model Generator",
      "properties": {
        "flutterGenius.createHive": {
          "type": "boolean",
          "default": true,
          "description": "Enable to automatically create Hive-related files."
        },
        "flutterGenius.createInjectionContainer": {
          "type": "boolean",
          "default": true,
          "description": "Enable to automatically create an injection container."
        },
        "flutterGenius.useStateManagement": {
          "type": "string",
          "default": "Cubit",
          "enum": [
            "Cubit",
            "Bloc",
            "Riverpod"
          ],
          "description": "Select the state management method to be used."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.87.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "ts-loader": "^9.5.1",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9"
  }
}
